<%# assumes to be in an angularjs scope where
  # war exists as a War.coffee object.
 %>
<section class="unsortable-war-row">
  <header>
    {{ war.created_at }}
  </header>
  <ul>
    <li class="winner">
      <ul>
        <li>
          <ul>
            <li class="coc-id">
              {{ war.winner().coc_id }}
            </li>
            <li>
              <a href="/clans/{{ war.winner().id }}">{{ war.winner().name }}</a>
            </li>
          </ul>
        </li>
        <li>
          {{ war.winner().stars_earned }}
        </li>
      </ul>
    </li>
    <li class="versus">
      <ul>
        <li>
          VS
        </li>
        <li>
          {{ war.winner().team_size }}
          <i class="fa fa-shield"></i>
          {{ war.not_winner().team_size }}
        </li>
      </ul>
    </li>
    <li class="not-winner">
      <ul>
        <li>
          <ul>
            <li>
              <a href="/clans/{{ war.not_winner().id }}">{{ war.not_winner().name }}</a>
            </li>
            <li class="coc-id">
              {{ war.not_winner().coc_id }}
            </li>
          </ul>
        </li>
        <li>
          {{ war.not_winner().stars_earned }}
        </li>
      </ul>
    </li>
  </ul>
  <footer>
    <a href="/wars/{{ war.id }}">details</a>
  </footer>
</section>
