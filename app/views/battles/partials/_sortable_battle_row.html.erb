<%# This partial assumes it is included within an
  # angularjs scope where "battle" is present and
  # "battle" is a mother efin Battle.coffee class
%>
<ul class="sortable-battle-row">
  <li>
    {{ battle.attacker_rank }}
  </li>
  <li>
    <section>
      <header>
        <a href="/players/{{ battle.attacker.id }}">{{ battle.attacker.name }}</a>
      </header>
      <footer>
        {{ battle.attacker.activeClan().name }}
      </footer>
    </section>
  </li>
  <li>
    {{ battle.destruction_percent }}%
  </li>
  <li>
    {{ battle.stars_awarded }}
  </li>
  <li>
    {{ battle.war_stars_awarded }}
  </li>
  <li>
    {{ battle.defender_rank }}
  </li>
  <li>
    <section>
      <header>
        <a href="/players/{{ battle.defender.id }}">{{ battle.defender.name }}</a>
      </header>
      <footer>
        {{ battle.defender.activeClan().name }}
      </footer>
    </section>
  </li>
  <li>
    {{ battle.timeLeftInWar() }}
  </li>
</ul>
